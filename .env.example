# GOPDS API Environment Variables
# Copy this file to .env and adjust values as needed

# Server Configuration
GOPDS_SERVER_HOST=127.0.0.1
GOPDS_SERVER_PORT=8085
GOPDS_SERVER_READ_TIMEOUT=10
GOPDS_SERVER_WRITE_TIMEOUT=10

# Project Settings
GOPDS_PROJECT_DOMAIN=localhost
GOPDS_PROJECT_URL=http://localhost:8085
GOPDS_SECRET_KEY=your-secret-key-here

# Database Configuration
GOPDS_POSTGRES_DBUSER=your-db-user
GOPDS_POSTGRES_DBPASS=your-db-password
GOPDS_POSTGRES_DBNAME=your-db-name
GOPDS_POSTGRES_DBHOST=localhost:5432
GOPDS_POSTGRES_MAX_CONNS=10

# Redis Configuration
GOPDS_REDIS_HOST=localhost
GOPDS_REDIS_PORT=6379
GOPDS_REDIS_PASSWORD=
GOPDS_REDIS_DB=0

# Session Configuration
GOPDS_SESSIONS_KEY=your-session-key
GOPDS_SESSIONS_REFRESH=your-refresh-key

# Application Settings
GOPDS_APP_DEVEL_MODE=true
GOPDS_APP_CDN=http://localhost:8085
GOPDS_APP_FILES_PATH=./files/
GOPDS_APP_USERS_PATH=./users/
GOPDS_APP_BOOK_CDN_KEY=your-book-cdn-key
GOPDS_APP_POSTERS_PATH=./posters/
GOPDS_APP_FILE_BOOK_CDN=http://localhost:8085
GOPDS_APP_MOBI_CONVERSION_DIR=./mobi/

# Email Configuration
GOPDS_EMAIL_FROM=noreply@example.com
GOPDS_EMAIL_USER=your-smtp-user
GOPDS_EMAIL_PASSWORD=your-smtp-password
GOPDS_EMAIL_SMTP_SERVER=smtp.example.com:587
